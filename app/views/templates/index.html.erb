<div class="row text-center">
  <div class="col-md-6">
    <h5>Review Template</h5>
    <%= form_with model: @shop.templates.first do |f| %>
      <%= f.text_field :title %>
      <%= f.text_area :body, size: "60x10" %>
      <%= f.submit %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h5>Thank you Template</h5>
    <%= form_with model: @shop.templates.last do |f| %>
      <%= f.text_field :title %>
      <%= f.text_area :body, size: "60x10" %>
      <%= f.submit %>
    <% end %>
  </div>
</div>