<div class="app-wrapper">
  <div class="app-content" >
    <main role="main" class="main-container">
      <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent mt-4 mb-0">
      <ul class="navbar-nav">
          <li class="nav-item">
            <h4>
              <a class="nav-link btn-magnify" href="/">
                Dashboard
              </a>
            </h4>
          </li>
          <li class="nav-item btn-rotate dropdown">
            <h4>
              <a class="nav-link" href="/templates">
                Templates
              </a>
            </h4>
          </li>
          <li class="nav-item">
            <h4>
              <a class="nav-link btn-rotate" href="#pablo">
                Settings
              </a>
            </h4>
          </li>
        </ul>
    </nav>
      <% shop = @shop %>
      <% renderer = ERB.new(@thank_you_template.html) %>
      <div class="row">
        <div class="col-md-2 col-sm-0"></div>
        <div class="col-md-8">
          <div class="card card-user">
            <div class="card-header">
              <h5 class="card-title text-center">Preview</h5>
            </div>
            <div class="card-body">
              <form>
                <div class="row">
                  <div class="input-row">
                    <div><span class="form-label" >From: </span><%= @thank_you_template.from %></div>
                  </div>
                </div>
                <div class="row">
                  <div class="input-row">
                    <div><span class="form-label" >To: {{customer.email}}</span></div>
                  </div>
                </div>
                <div class="row">
                  <div class="input-row">
                    <div><span class="form-label">Subject: </span> <%= @thank_you_template.subject %></div>
                  </div>
                </div>
                <div class="row">
                  <div class="input-row">
                    <div><span class="form-label">Reply to: </span> <%= @thank_you_template.reply_to %></div>
                  </div>
                </div>
                <div class="row">
                  <div class="input-row">
                    <%= renderer.result(binding).html_safe %>
                  </div>
                </div>
              </form>
            </div>
            <div class="input-row">
              <div class="card-footer">
                buttons should go here
              </div>
            </div>    
          </div>
        </div>
        <div class="col-md-2 col-sm-0"></div>
      </div>
      <div class="row">
        <div class="update ml-auto mr-auto">
          <%= link_to "https://ultimate-mailer-non-embedded.herokuapp.com/thank_you_templates/edit?shop=#{@shop.shopify_domain}&not-redirect=1", target: "_blank" do %>
            <button type="submit" class="btn btn-primary btn-round">Edit template</button>
          <% end %>
        </div>
      </div>
    </main>
  </div>
</div>