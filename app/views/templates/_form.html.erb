<%= form_with model: template do |f| %>
  <div class="form-group row">
    <div class="col-md-6">
      <%= f.label :reply_to %>
      <%= f.text_field :reply_to, style: {width: '100%'}, class: 'form-control' %>
    </div>
    <div class="col-md-6">
      <%= f.label :from %>
      <%= f.text_field :from, style: {width: '100%'}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email_title %>
    <%= f.text_field :title, style: {width: '100%'}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email_body %>
    <%= f.text_area :body, style: {width: '100%'}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit "Save Template", data: {confirm: 'Are you sure you want to save this template' }, class: 'btn btn-primary btn-round' %>
  </div>
<% end %>