<div>
<%= reviews.each do |review| %>
  <div class="review" style="border-bottom: 1px black solid;">
    <div>
      <%= review.rating %>
    </div>
    <div style="padding-top:10px; padding-bottom: 10px;">
      <div>
        <b><%= review.title %> </b>
      </div>
      <div>
        <%= review.customer_name %>
      </div>
    </div>
    <div style="padding-bottom: 20px;">
      <%= review.description %>
    </div>
  </div>
<% end %>
</div>