  <div class="row">
    <div class="col-md-12">
      <div class="card ">
        <div class="card-header ">
          <h5 class="card-title">Email Statistics</h5>
        </div>
        <div class="card-body ">
          <div >
            <canvas id=chartHours width="400" height="110"></canvas>
          </div>
        </div>
      </div>
    </div>
</div>

<div  class="inner-div-overlay" style="background-color: rgba(255,255,255, 1);">
  <%= render partial: '/shared/onboarding'%>
</div>

</div>




  <script>
    $(document).on('turbolinks:load',function() {
      if(window.location.pathname === "/" || window.location.pathname === "/dashboard"){
        initEmailStatsGraph();
      }
    });





  function initEmailStatsGraph() {

    chartColor = "#FFFFFF";
    var labels = []
    var emailsSent = []
    var emailsOpened= []
    var graphData = JSON.parse('<%= raw @graph_data.to_json %>')

    for(var prop in graphData) {
      labels.push(prop)
      emailsSent.push(graphData[prop][0])
      emailsOpened.push(graphData[prop][1])
    }

    var valuesArray = emailsSent.concat(emailsOpened)
    var max = Math.max(...valuesArray) + 1
    ctx = document.getElementById('chartHours').getContext("2d");
    

    myChart = new Chart(ctx, {
      type: 'line',

      data: {
        labels: labels,
        datasets: [
          {
            label: 'Emails Opened',
            fill: false,
            borderColor: "#1775ef",
            backgroundColor: "#1775ef",
            pointRadius: 0,
            pointHoverRadius: 0,
            borderWidth: 3,
            data: emailsOpened
          },
          {
            label: 'Emails Sent',
            fill: false,
            borderColor: "#fec400",
            backgroundColor: "#fec400",
            pointRadius: 0,
            pointHoverRadius: 0,
            borderWidth: 3,
            data: emailsSent
          }
        ]
      },
      options: {
            tooltips: {
      mode: 'index',
      intersect: false,
    },
        scales: {
          yAxes: [{
            ticks: {
              max: max,
              fontColor: "#9f9f9f",
              beginAtZero: true,
              stepSize: 1,
            }
          }],

          xAxes: [{
            barPercentage: 1.6,
            stacked: true,
            ticks: {
              padding: 20,
              fontColor: "#9f9f9f"
            }
          }]
        },
      }
    });
  }






</script>


