<% shop = @shop %>
<% renderer = ERB.new(@thank_you_template.html) %>
<div class="row">
  <div class="col-md-2 col-sm-0"></div>
  <div class="col-md-8">
    <div class="card card-user">
      <div class="card-header">
        <h5 class="card-title text-center">Thank You Email Template Preview</h5>
      </div>
      <div class="card-body">
        <form>
          <div class="row">
            <div class="input-row">
              <div><span>From: {{customer.email}}</span></div>
            </div>
          </div>
          <div class="row">
            <div class="input-row">
              <div><span>To: {{customer.email}}</span></div>
            </div>
          </div>
          <div class="row">
            <div class="input-row">
              <div><span>Subject: {{customer.email}}</span></div>
            </div>
          </div>
          <div class="row">
            <div class="input-row">
              <div><span>Reply to: {{customer.email}}</span></div>
            </div>
          </div>
          <div class="row">
            <div class="input-row">
              <%= renderer.result(binding).html_safe %>
            </div>
          </div>
        </form>
      </div>
      <div class="input-row">
        <div class="card-footer">
           buttons should go here
        </div>
      </div>    
    </div>
  </div>
  <div class="col-md-2 col-sm-0"></div>
</div>
<div class="row">
  <div class="update ml-auto mr-auto">
    <%= link_to "https://ultimate-mailer-non-embedded.herokuapp.com/thank_you_templates/edit?shop=#{@shop.shopify_domain}&not-redirect=1", target: "_blank" do %>
      <button type="submit" class="btn btn-primary btn-round">Edit template</button>
    <% end %>
  </div>
</div>


