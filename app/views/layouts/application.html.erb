    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
      <div class="app-wrapper" style="margin-bottom: 50px;">
      <div class="app-content" >
        <main role="main" class="main-container">
          <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent mt-4 mb-0">
          <ul class="navbar-nav">
              <li class="nav-item">
                <h4>
                  <a class="nav-link btn-magnify" href="/">
                    Dashboard
                  </a>
                </h4>
              </li>
              <li class="nav-item btn-rotate dropdown">
                <h4>
                  <a class="nav-link" href="/templates">
                    Templates
                  </a>
                </h4>
              </li>
              <li class="nav-item">
                <h4>
                  <a class="nav-link btn-rotate" href="/settings">
                    Settings
                  </a>
                </h4>
              </li>
            </ul>
        </nav>
    <%= yield %>
          </main>
      </div>
    </div>
  </body>
</html>
