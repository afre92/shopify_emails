<div class="row">
  <div class="col-md-1 col-sm-0"></div>
  <div class="col-md-10">

    <div class="card card-user">
      <div class="row">
        <div class="input-row">
          <div class="pr-3 pl-3">
            <span class="form-label" > Pause Emails </span> 
            <label class="switch float-right">
              <input type="checkbox">
              <span class="slider round"></span>
            </label>
          </div>
        </div>
      </div>
    </div>

    <div class="card card-user">
      <div class="row">
        <div class="pr-3 pl-3" style="width: 100%">
          <div class="input-row row ml-0 mr-0">
            <div class="col-md-7 pl-0"><span class="form-label" > Time to Send "Thank You" Email </span>

            </div>
            <div class="col-md-5 pr-0">
              <div class="slidecontainer float-right">
                  <input type="range" min="1" max="100" value="0" class="bar-slider" id="myRange">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card card-user">
      <div class="row">
        <div class="pr-3 pl-3" style="width: 100%">
          <div class="input-row row ml-0 mr-0">
            <div class="col-md-7 pl-0"><span class="form-label" > Time to Send "Review" Email </span>

            </div>
            <div class="col-md-5 pr-0">
              <div class="slidecontainer float-right">
                  <input type="range" min="1" max="100" value="0" class="bar-slider" id="myRange">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card card-user">
      <div class="card-header">
        <h5 class="card-title text-center"></h5>
      </div>
      <div class="card-body">
        <form>
          <div class="row">
              <div class="col-md-6 pr-1">
                <div class="form-group">
                  <label>Shop Name</label>
                  <input type="text" class="form-control" placeholder="Shop Name">
                </div>
              </div>
              <div class="col-md-6 pl-1">
                <div class="form-group">
                  <label>Title</label>
                  <input type="text" class="form-control" placeholder="Title" >
                </div>
              </div>
          </div>
          <div class="row">
              <div class="col-md-6 pr-1">
                <div class="form-group">
                  <label>Owner First Name</label>
                  <input type="text" class="form-control" placeholder="Owner First Name">
                </div>
              </div>
              <div class="col-md-6 pl-1">
                <div class="form-group">
                  <label>Owner Last Name</label>
                  <input type="text" class="form-control" placeholder="Owner Last Name" >
                </div>
              </div>
          </div>
          <div class="row">
              <div class="col-md-6 pr-1">
                <div class="form-group">
                  <label>Shop Number</label>
                  <input type="text" class="form-control" placeholder="Shop Number">
                </div>
              </div>
              <div class="col-md-6 pl-1">
                <div class="form-group">
                  <label>Address</label>
                  <input type="text" class="form-control" placeholder="Address" >
                </div>
              </div>
          </div>
          <div class="row">
              <div class="col-md-6 pr-1">
                <div class="form-group">
                  <label>Email</label>
                  <input type="text" class="form-control" placeholder="Email">
                </div>
              </div>
              <div class="col-md-6 pl-1">
                <div class="form-group">
                  <label>Website</label>
                  <input type="text" class="form-control" placeholder="Website" >
                </div>
              </div>
          </div>
        </form>
      </div>
      <div class="input-row">
        <div class="card-footer">
          <div class="row">
            <div class="update ml-auto mr-auto">
              <%= link_to "save", target: "_blank" do %>
                <button type="submit" class="btn btn-primary btn-round">Save Settings</button>
              <% end %>
            </div>
          </div>
        </div>
      </div>    
    </div>
  </div>
  <div class="col-md-1 col-sm-0"></div>
</div>

