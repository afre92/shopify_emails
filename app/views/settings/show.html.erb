<div class="row ">
  <div class="col-md-1 col-sm-0"></div>
  <div class="col-md-10">

    <div class="card card-user">
      <div class="row">
        <div class="input-row settings">
          <div class="pr-3 pl-3">
            <span class="form-label" > <label>Pause Emails</label> </span> 
            <label class="switch float-right">
              <input type="checkbox">
              <span class="slider round"></span>
            </label>
          </div>
        </div>
      </div>
    </div>

    <div class="card card-user">
      <div class="row">
        <div class="pr-3 pl-3" style="width: 100%">
          <div class="input-row settings row ml-0 mr-0">
            <div class="col-md-7 pl-0">
              <span class="form-label" > 
                <label class="pr-1">Time to Send "Thank You" Email </label>
                ( <span id="thank-you-range-value" class="pr-1"></span>Minutes )
              </span>
            </div>
            <div class="col-md-5 pr-0">
              <div class="slidecontainer float-right">
                  <input type="range" min="1" max="60" value="0" class="bar-slider" id="thank-you-range">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card card-user">
      <div class="row">
        <div class="pr-3 pl-3" style="width: 100%">
          <div class="input-row settings row ml-0 mr-0">
            <div class="col-md-7 pl-0">
              <span class="form-label" >
                <label class="pr-1"> Time to Send "Review" Email </label>
                ( <span id="review-value" class="pr-1"></span>Days )
              </span>

            </div>
            <div class="col-md-5 pr-0">
              <div class="slidecontainer float-right">
                  <input type="range" min="1" max="30" value="0" class="bar-slider" id="review-range">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card card-user">
      <div class="card-header">
        <h5 class="card-title text-center"></h5>
      </div>
      <div class="card-body">
        <form>
          <div class="row">
              <div class="col-md-6 pr-1">
                <div class="form-group">
                  <label>Shop Name</label>
                  <input type="text" class="form-control" placeholder="Shop Name">
                </div>
              </div>
              <div class="col-md-6 pl-1">
                <div class="form-group">
                  <label>Owner Title</label>
                  <input type="text" class="form-control" placeholder="Title" >
                </div>
              </div>
          </div>
          <div class="row">
              <div class="col-md-6 pr-1">
                <div class="form-group">
                  <label>Owner First Name</label>
                  <input type="text" class="form-control" placeholder="Owner First Name">
                </div>
              </div>
              <div class="col-md-6 pl-1">
                <div class="form-group">
                  <label>Owner Last Name</label>
                  <input type="text" class="form-control" placeholder="Owner Last Name" >
                </div>
              </div>
          </div>
          <div class="row">
              <div class="col-md-6 pr-1">
                <div class="form-group">
                  <label>Shop Number</label>
                  <input type="text" class="form-control" placeholder="Shop Number">
                </div>
              </div>
              <div class="col-md-6 pl-1">
                <div class="form-group">
                  <label>Address</label>
                  <input type="text" class="form-control" placeholder="Address" >
                </div>
              </div>
          </div>
          <div class="row">
              <div class="col-md-6 pr-1">
                <div class="form-group">
                  <label>Email</label>
                  <input type="text" class="form-control" placeholder="Email">
                </div>
              </div>
              <div class="col-md-6 pl-1">
                <div class="form-group">
                  <label>Website</label>
                  <input type="text" class="form-control" placeholder="Website" >
                </div>
              </div>
          </div>
        </form>
      </div>
      <div class="input-row">
        <div class="card-footer">
          <div class="row">
            <div class="update ml-auto mr-auto">
              <%= link_to "save", target: "_blank" do %>
                <button type="submit" class="btn btn-primary btn-round">Save Settings</button>
              <% end %>
            </div>
          </div>
        </div>
      </div>    
    </div>
  </div>
  <div class="col-md-1 col-sm-0"></div>
</div>

<script>
  var thankYouSlider = document.getElementById("thank-you-range");
  var thankYouSliderOutput = document.getElementById("thank-you-range-value");
  thankYouSliderOutput.innerHTML = thankYouSlider.value

  thankYouSlider.oninput = function() {
    thankYouSliderOutput.innerHTML = this.value;
  }

  var reviewSlider = document.getElementById("review-range");
  var reviewOutput = document.getElementById("review-value");
  reviewOutput.innerHTML = reviewSlider.value;

  reviewSlider.oninput = function() {
    reviewOutput.innerHTML = this.value;
  }
</script>