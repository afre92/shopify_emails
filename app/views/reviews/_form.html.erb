<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Review from blablah</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row p-3">
          <div class="col-md-2">
            <div class="form-group">
              <label>area</label>
              <%= text_field_tag 'area', class: 'form-control'%>
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label>area description</label>
              <%= f.text_field 'area_desc', class: 'form-control'%>
            </div>
          </div>
          <div class="col-md-2">
            <div class="form-group">
              <label>sub-area</label>
              <%= f.text_field 'sub_area', class: 'form-control'%>
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label>sub-area desc</label>
              <%= f.text_field 'sub_area_desc', class: 'form-control'%>
            </div>
          </div>
          <div class="col-md-2">
            <div class="form-group">
              <label>cost</label>
              <%= f.text_field 'cost', class: 'form-control'%>
            </div>
          </div>

        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>